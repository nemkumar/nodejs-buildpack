#!/usr/bin/env bash
# bin/release <build-dir>

echo 'default_process_types:'

if [[ "${OPTIMIZE_MEMORY:-}" = "true" ]]; then
  echo '  web: npm run build-prod && npm start --optimize_for_size --always_compact --max_old_space_size=$(( $MEMORY_AVAILABLE * 75 / 100 ))'
else
  echo '  web: npm run build-prod && npm start'
fi
